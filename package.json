{
  "name": "@subql/components",
  "version": "1.0.1-52",
  "description": "React UI components for SubQuery front ends",
  "repository": "git@github.com:subquery/subql-copmonents.git",
  "author": "Subquery",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -d && yarn copy-css",
    "copy-css": "copyfiles -u 1 components/*.css components/**/*.css components/**/**/*.css dist/",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "deploy-storybook": "yarn build-storybook && gh-pages -d storybook-static",
    "prepare": "yarn build && husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/components": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/theming": "^6.5.12",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-loader": "^8.2.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.31.8",
    "gh-pages": "^3.2.3",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-designs": "^6.3.1",
    "storybook-css-modules-preset": "^1.1.1",
    "typescript": "^4.5.2",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "dependencies": {
    "antd": "5.0.2",
    "clsx": "^1.2.1",
    "graphiql": "2.2.0",
    "graphql": "16.6.0",
    "react-jazzicon": "^0.1.3",
    "react-router-dom": "^6.4.2"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": "prettier --write"
  }
}
